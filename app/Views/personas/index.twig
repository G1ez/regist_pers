<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Personas</title>
</head>
<body>
    <h1>Personas Registradas</h1>

    {% if session.success %}
        <p style="color: green;">{{ session.success }}</p>
    {% endif %}

    <a href="/personas/create">Registrar Nueva Persona</a>

    <table border="1" cellpadding="5" cellspacing="0">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Email</th>
                <th>Teléfono</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            {% for persona in personas %}
                <tr>
                    <td>{{ persona.id }}</td>
                    <td>{{ persona.nombre }}</td>
                    <td>{{ persona.email }}</td>
                    <td>{{ persona.telefono }}</td>
                    <td>
                        <a href="/personas/edit/{{ persona.id }}">Editar</a>
                        <form action="/personas/delete/{{ persona.id }}" method="post" style="display: inline;">
                            <button type="submit" onclick="return confirm('¿Estás seguro de eliminar esta persona?')">Eliminar</button>
                        </form>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No hay personas registradas.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</body>
</html>
